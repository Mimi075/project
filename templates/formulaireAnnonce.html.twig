{% extends "layout.html.twig" %}

{% block css %}
	<link href="../css/formulaireAnnonce.css" media="screen" rel="stylesheet" type="text/css" />
{% endblock %}


{% block body %}

	<h1>Rentrez votre annonce</h1><br>
	<div class="container-fluid" id="Formulaire">
		<form method="post" action="#" enctype="multipart/form-data">
				<div class="form-group">
					<label for="formGroupExampleInput">Titre de l'annonce :</label>
					<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Entrez votre titre">
				</div>
				<div class="col-auto my-1">
					<label class="mr-sm-2" for="inlineFormCustomSelect">Cat√©gorie :</label>
					<select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
						<option selected>Choisir...</option>
						{% for categorys in category %}
							<option value="category{{ val }}">{{ categorys }}</option>
							{% set val = val + 1 %}

						{% endfor %}
		
					</select>
				</div>
				<div class="form-group">
					<label for="exampleFormControlTextarea1">Texte de l'annonce :</label>
					<textarea class="form-control" id="exampleFormControlTextarea1" rows="5" cols="20" placeholder="Tapez votre annonce..."></textarea>
				</div>
				<div class="form-group">
					<label for="formGroupExampleInput">Choisir une image un telecharger :</label><br>
					    <input type="file" name="file" id="profile-img">
						<img src="" id="profile-img-tag" width="200px" />
				</div>
				
				<div class="form-group">
					<label for="formGroupExampleInput">Prix :</label>
					<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Entrez votre prix">
				</div>
				<div class="col-auto my-1">
					<button type="submit" class="btn btn-outline-success">Mise en ligne</button>
				</div>
			</form>

			<script type="text/javascript">
    			function readURL(input) {
        			if (input.files && input.files[0]) {
            			var reader = new FileReader();
            
            			reader.onload = function (e) {
                			$('#profile-img-tag').attr('src', e.target.result);
            			}
            			reader.readAsDataURL(input.files[0]);
        			}
   				}
    			$("#profile-img").change(function(){
        			readURL(this);
    			});
			</script>

		</div>
	{% endblock %}