{% extends "layout.html.twig" %}
{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3"></div>
			<div class="col-sm-6">				
				<h1 id="inscrit">Connexion</h1><br>
				<div id="Formulaire">
					<form method="post" action="{{ path('login') }}" enctype="multipart/form-data">
						<div class="form-group">
							<label for="formGroupExampleInput">Adresse e-mail</label>
							<input type="email" class="form-control" id="connectEmail" name="connectEmail" placeholder="Adresse e-mail">
						</div>
						<div class="form-group">
							<label for="formGroupExampleInput">Mot de passe</label>
							<input type="password" class="form-control" id="connectPassword" name="connectPassword"
							placeholder="Mot de passe">
						</div>
						<div class="col-auto my-1">
							<button type="submit" class="btn btn-outline-success">Connexion</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}